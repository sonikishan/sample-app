<li>
  <%= gravatar_for(user, :size => 30) %>
  <%= link_to(user.name, user) %>
  <% if current_user.admin? %>
    | <%= link_to("Delete", user,
                  :method => :delete,
                  :confirm => "are you sure you want to delete this user?",
                  :title => "Delete #{ user.name }") %>
  <% end %>
</li>