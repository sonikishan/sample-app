<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>
      <%= will_paginate(@users) %>

      <% unless @users.empty? %>
        <ul class="users">
          <%= render(@users) %>
        </ul>

        <%= will_paginate(@users) %>
      <% end %>
    </td>
    <td class="sidebar round">
      <b>Name</b> <%= @user.name %>
      <b>URL</b> <%= link_to(user_path(@user), @user) %>
      <b>Microposts</b> <%= @user.microposts.count %>

      <%= render('shared/stats') %>

      <% unless @users.empty? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, :size => 30), user %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>